{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Logistic Regression",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\logistic-regression\\index.js",
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Linear regression",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\linear-regression\\index.js",
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Multinomial Logistic regression",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\multinomial-logistic-regression\\index.js",
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Image recognition",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/image-recognition/index.js",
            "outputCapture": "std",
            "runtimeArgs": [ "--max-old-space-size=4096"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Memory test",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/multinomial-logistic-regression/memory.js",
            "outputCapture": "std",
            "runtimeArgs": [ "--max-old-space-size=4096"]
        }
    ]
}